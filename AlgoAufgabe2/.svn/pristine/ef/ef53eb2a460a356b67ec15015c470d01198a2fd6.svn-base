package de.ostfalia.algo.aufgabe2.test;

import static org.junit.Assert.assertEquals;

import org.junit.Test;

import de.ostfalia.algo.aufgabe2.Aufgabe2;

public class RekursivTest {

    @Test
    public void MaxFak_12() {
	Aufgabe2 a2 = new Aufgabe2();
	assertEquals(12, a2.binomialkoeffizient_Fakultaet(12, 1));
	assertEquals(66, a2.binomialkoeffizient_Fakultaet(12, 2));
	assertEquals(220, a2.binomialkoeffizient_Fakultaet(12, 3));
	assertEquals(495, a2.binomialkoeffizient_Fakultaet(12, 4));
	assertEquals(792, a2.binomialkoeffizient_Fakultaet(12, 5));
	assertEquals(924, a2.binomialkoeffizient_Fakultaet(12, 6));
	assertEquals(792, a2.binomialkoeffizient_Fakultaet(12, 7));
	assertEquals(495, a2.binomialkoeffizient_Fakultaet(12, 8));
	assertEquals(220, a2.binomialkoeffizient_Fakultaet(12, 9));
	assertEquals(66, a2.binomialkoeffizient_Fakultaet(12, 10));
	assertEquals(12, a2.binomialkoeffizient_Fakultaet(12, 11));
	assertEquals(1, a2.binomialkoeffizient_Fakultaet(12, 12));
    }
}
